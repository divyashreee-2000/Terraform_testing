# Configure the Azure provider
terraform {
  cloud {
   organization = "Azure_Labs"

   workspaces {
     name = "Demo"
   }
  }
  required_providers {
    azurerm = {
      source  = "hashicorp/azurerm"
      version = "~> 3.0.2"
    }
  }

  required_version = ">= 1.1.0"
}

provider "azurerm" {
  features {}
}

resource "azurerm_resource_group" "rg" {
  name     = "myTFResourceGroup"
  location = "Central India"
}